<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.TipCalculator.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:minHeight">@dimen/min_text_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <style name="Widget.TipCalculator.CompoundButton.Switch_dark"
        parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:minHeight">@dimen/min_text_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/primary90</item>
        <item name="track">@drawable/track</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <style name="Widget.TipCalculator.CompoundButton.Switch_light"
        parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:minHeight">@dimen/min_text_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/primary10</item>
        <item name="track">@drawable/track</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <style name="Widget.TipCalculator.CompoundButton.RadioButton_dark"
        parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:paddingStart">8dp</item>
        <item name="android:textColor">@color/secondary80</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <style name="Widget.TipCalculator.CompoundButton.RadioButton_light"
        parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:paddingStart">8dp</item>
        <item name="android:textColor">@color/secondary40</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

</resources>